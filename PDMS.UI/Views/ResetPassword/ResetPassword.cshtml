@model PDMS.UI.Models.ResetPasswordModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Reset Password";
}

 <h2>Password Reset Form: </h2>
  <div class="flex h-screen">
    <div class="m-auto">
        @using (Html.BeginForm("Reset", "ResetPassword", FormMethod.Post, new { @class = "bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4" }))
        {
            <div class="container">
                <br>
                <p><b>Reset Password:</b></p>
                <div class="row"> 
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2"})
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-sm-3", placeholder = "Enter New Password" })
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div><br/>
                <div class="row"> 
                    @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-sm-2"})
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control col-sm-3", placeholder = "Confirm Password" })
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                </div><br/>
                <div class="row"> 
                    @Html.LabelFor(m => m.ReturnToken, new { @class = "col-sm-2"})
                    @Html.TextBoxFor(m => m.ReturnToken, new { @class = "form-control col-sm-3"})
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.ReturnToken, "", new { @class = "text-danger" })
                </div><br/>
                <div class="row"> 
                    @Html.LabelFor(m => m.Username, new { @class = "col-sm-2"})
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-sm-3"})
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div><br/>
                <button class="btn btn-primary mr-1" type="submit">Create</button> 
                <br/><br/>   
            </div>          
            <p>Problem Logging in! Please contact us.<br>
            <b>Email: </b>hello@tmmjconsulting.com.au<br>
            <b>Phone: </b>+61 (03) 5309 0469 </p>
        }
    </div>
  </div>
